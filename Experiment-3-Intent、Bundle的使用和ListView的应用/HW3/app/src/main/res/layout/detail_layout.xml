<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/my_match_style"
              android:orientation="vertical">
    
    <RelativeLayout
        android:id="@+id/topLayout"
        style="@style/my_match_style"
        android:layout_weight="2">

        <ImageButton
            android:id="@+id/back"
            style="@style/my_wrap_style"
            android:layout_margin="@dimen/dimen_10dp"
            android:background="@color/transparent"
            android:src="@mipmap/back"/>

        <TextView
            android:id="@+id/nameShow"
            style="@style/my_wrap_style"
            android:layout_margin="@dimen/dimen_10dp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/primaryWhite"
            android:textSize="@dimen/dimen_20sp"/>

        <ImageButton
            android:id="@+id/star"
            style="@style/my_wrap_style"
            android:layout_margin="@dimen/dimen_10dp"
            android:src="@mipmap/empty_star"
            android:background="@color/transparent"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <LinearLayout
        style="@style/my_match_style"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            style="@style/my_wrap_style"
            android:layout_margin="@dimen/dimen_15dp">

            <LinearLayout
                style="@style/my_wrap_style"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/phonenumber"
                    style="@style/my_wrap_style"
                    android:textColor="@color/primaryBlack"/>

                <TextView
                    android:id="@+id/address"
                    style="@style/my_wrap_style"
                    android:textColor="@color/shallowBlack"/>
            </LinearLayout>

            <LinearLayout
                style="@style/my_wrap_style"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true">

                <ImageView
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:layout_width="@dimen/dimen_1dp"
                    android:layout_height="@dimen/dimen_match"
                    android:background="@color/shallowGrey"/>

                <ImageView
                    style="@style/my_wrap_style"
                    android:src="@mipmap/chat"/>
            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_width="@dimen/dimen_match"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/shallowGrey"/>

        <TextView
            style="@style/my_wrap_style"
            android:layout_margin="@dimen/dimen_10dp"
            android:textSize="@dimen/dimen_20sp"
            android:text="@string/moreMessage"/>

        <ImageView
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_width="@dimen/dimen_match"
            android:layout_height="@dimen/dimen_20dp"
            android:background="@color/shallowGrey"/>

        <ListView
            android:id="@+id/detailList"
            android:layout_height="@dimen/dimen_wrap"
            android:layout_width="@dimen/dimen_match">

        </ListView>

    </LinearLayout>

</LinearLayout>
